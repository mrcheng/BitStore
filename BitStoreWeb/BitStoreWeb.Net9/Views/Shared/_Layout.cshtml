@inject IWebHostEnvironment Environment
@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty).ToLowerInvariant();
    var requestPath = Context.Request.Path;
    var isApiNavActive = requestPath.StartsWithSegments("/api") || requestPath.StartsWithSegments("/swagger");
    var isDemoNavActive = requestPath.StartsWithSegments("/demo");
    string NavClass(params string[] controllers)
    {
        foreach (var controller in controllers)
        {
            if (currentController == controller.ToLowerInvariant())
            {
                return "nav-link active";
            }
        }

        return "nav-link";
    }
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BitStoreWeb.Net9</title>
    @if (Environment.IsDevelopment())
    {
        <script type="module" src="http://localhost:5173/@@vite/client"></script>
        <script type="module" src="http://localhost:5173/frontend/main.js"></script>
    }
    else
    {
        <link rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
    }
    <link rel="stylesheet" href="~/BitStoreWeb.Net9.styles.css" asp-append-version="true" />
</head>
<body class="bg-body-tertiary d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="brand-logo" src="~/Images/logoB.png" alt="BitStore logo" />
                    <span>BitStore</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="@NavClass("Home")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="@NavClass("Buckets", "Bucket")" asp-controller="Buckets" asp-action="Index">Buckets</a>
                        </li>
                        <li class="nav-item">
                            <a class="@NavClass("HowTo")" asp-controller="HowTo" asp-action="Index">Tutorial</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(isApiNavActive ? "nav-link active" : "nav-link")" href="/api">API</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(isDemoNavActive ? "nav-link active" : "nav-link")" href="/demo">Demo</a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link disabled text-light">Hi @User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="@NavClass("Account")" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container py-4 flex-grow-1">
        <div class="bg-white border rounded-3 p-4 shadow-sm">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-3 text-muted bg-white">
        <div class="container">
            &copy; 2026 - BitStore
        </div>
    </footer>
    @if (!Environment.IsDevelopment())
    {
        <script type="module" src="~/dist/app.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
