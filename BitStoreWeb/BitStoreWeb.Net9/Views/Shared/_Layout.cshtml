<body onload="sh_highlightDocument();">
    <div class="container">
        <section id="login"></section>

        <p>You're now viewing buckets connected to the email foo@foo.se</p>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li class="active"><a href="/" class="menu-start">Home</a></li>
                        <li><a href="/buckets" target="_self">Buckets</a></li>
                        <li><a href="/howto" target="_self">How to use</a></li>
                        <li><a href="/api" target="_self">API</a></li>
                        <li><a href="https://github.com/mrcheng/BitStore/" target="_self">GitHub</a></li>
                    </ul>
                </div>
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <div class="pull-left">
                <p>&copy; @DateTime.Now.Year - MrC Collective</p>
            </div>
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
