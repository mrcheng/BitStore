@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty).ToLowerInvariant();
    var requestPath = Context.Request.Path;
    var isApiNavActive = requestPath.StartsWithSegments("/api") || requestPath.StartsWithSegments("/swagger");
    var isDemoNavActive = requestPath.StartsWithSegments("/demo");
    string NavClass(params string[] controllers)
    {
        foreach (var controller in controllers)
        {
            if (currentController == controller.ToLowerInvariant())
            {
                return "nav-link active";
            }
        }

        return "nav-link";
    }
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
    var isSuperUser = User.IsInRole("SuperUser");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BitStoreWeb.Net9</title>
    <link rel="icon" type="image/svg+xml" href="~/Images/favicon-copy.svg" asp-append-version="true" />
    <link rel="shortcut icon" type="image/svg+xml" href="~/Images/favicon-copy.svg" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
</head>
<body class="app-shell">
    <header class="app-header">
        <nav class="navbar navbar-expand-lg app-nav">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="brand-logo" src="~/Images/logoB.png" alt="BitStore logo" />
                    <span>BitStore</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center gap-lg-1">
                        <li class="nav-item">
                            <a class="@NavClass("Home")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(NavClass("Buckets", "Bucket") + " nav-link-with-icon")" asp-controller="Buckets" asp-action="Index">
                                <svg class="nav-bucket-icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M4 7.5a3.5 3.5 0 0 1 3.5-3.5h9A3.5 3.5 0 0 1 20 7.5v9a3.5 3.5 0 0 1-3.5 3.5h-9A3.5 3.5 0 0 1 4 16.5v-9z"></path>
                                    <path d="M7 9h10v2H7zM7 13h6v2H7z"></path>
                                </svg>
                                <span>Buckets</span>
                            </a>
                        </li>
                        @if (isSuperUser)
                        {
                            <li class="nav-item">
                                <a class="@NavClass("Users")" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="@NavClass("HowTo")" asp-controller="HowTo" asp-action="Index">Tutorial</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(isApiNavActive ? "nav-link active" : "nav-link")" href="/api">API</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(isDemoNavActive ? "nav-link active" : "nav-link")" href="/demo">Demo</a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link disabled nav-hello">Hi @User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link nav-logout">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="@NavClass("Account")" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="app-content">
        <div class="container-fluid app-main-container">
            <div class="app-stage">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="app-footer py-3">
        <div class="container-fluid">
            &copy; 2026 - BitStore
        </div>
    </footer>
    <script type="module" src="~/dist/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
