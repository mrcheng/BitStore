@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="hero-surface fade-in-up">
    <span class="page-kicker">System</span>
    <h1 class="hero-title mb-2">An error occurred</h1>
    <p class="hero-subtitle">The request could not be completed. You can retry or return to the previous page.</p>
</div>

@if (Model.ShowRequestId)
{
    <p class="mt-3">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="card mt-3 fade-in-up fade-delay-1">
    <div class="card-body">
        <h2 class="h5 mb-2">Development mode details</h2>
        <p class="mb-2">
            Switching to <strong>Development</strong> environment shows detailed diagnostics for debugging.
        </p>
        <p class="mb-0">
            Do not enable Development in production. To debug locally, set
            <code>ASPNETCORE_ENVIRONMENT=Development</code> and restart.
        </p>
    </div>
</div>
