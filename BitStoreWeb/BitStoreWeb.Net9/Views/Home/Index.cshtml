@{
    ViewData["Title"] = "Home";
}

<section class="py-2">
    <div class="p-4 p-md-5 mb-4 rounded-3 bg-light border">
        <div class="container-fluid py-3">
            <h1 class="display-5 fw-bold">BitStore</h1>
            <p class="col-md-9 fs-5 mb-4">
                Store values anywhere, instantly. Push data from your app, script, CI job, or device, then fetch it from one lightweight API.
            </p>
            <p class="text-muted mb-4">Create a bucket, copy the slug and key, and you are live in minutes. Easy as a bit.</p>
            <a asp-controller="Buckets" asp-action="Index" class="btn btn-primary btn-lg">Browse Buckets</a>
        </div>
    </div>
</section>

<section class="row g-3">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Buckets</h5>
                <p class="card-text">Create buckets, copy slugs, and manage write keys in one place.</p>
                <a asp-controller="Buckets" asp-action="Index" class="btn btn-outline-primary">Open</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Tutorial</h5>
                <p class="card-text">Step-by-step setup and API usage instructions.</p>
                <a asp-controller="HowTo" asp-action="Index" class="btn btn-outline-primary">Open</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">API</h5>
                <p class="card-text">Read/write endpoints with Swagger docs and quick testing.</p>
                <a href="/api" class="btn btn-outline-primary">Open</a>
            </div>
        </div>
    </div>
</section>

<section class="mt-4">
    <h4 class="mb-3">Sample</h4>
    <pre class="code-sample mb-0"><code>const base = "https://your-host/api/buckets/your-slug";
await fetch(`${base}/records`, {
  method: "POST",
  headers: { "Content-Type": "application/json", "X-BitStore-Key": "your-key" },
  body: JSON.stringify({ value: "1337" })
});
const latest = await fetch(`${base}/latest`).then(r => r.json());
console.log(latest);</code></pre>
</section>
