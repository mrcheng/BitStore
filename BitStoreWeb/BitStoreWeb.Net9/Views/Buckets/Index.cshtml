@model BitStoreWeb.Net9.Models.BucketsViewModel
@{
    ViewData["Title"] = "Buckets";
}

<div class="mb-3">
    <h1 class="section-title mb-1">Your Buckets</h1>
    <p class="section-subtitle mb-0">Create and manage API-ready storage buckets with dedicated write keys.</p>
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<div class="card mb-4 fade-in-up">
    <div class="card-body">
        <h2 class="h5 mb-3">Create bucket</h2>
        <form asp-action="Create" asp-controller="Buckets" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-5">
                <label asp-for="NewBucketName" class="form-label"></label>
                <input asp-for="NewBucketName" class="form-control" />
                <span asp-validation-for="NewBucketName" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="NewBucketDescription" class="form-label"></label>
                <input asp-for="NewBucketDescription" class="form-control" />
                <span asp-validation-for="NewBucketDescription" class="text-danger"></span>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-success align-self-end">Create</button>
            </div>
        </form>
    </div>
</div>

<p class="text-muted mb-3">Each bucket has a public slug and private write key.</p>

<div class="card mb-3 fade-in-up fade-delay-1">
    <div class="card-body">
        <div class="table-responsive">
            <table id="buckets-table" class="table table-striped align-middle w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Slug</th>
                        <th>Write key</th>
                        <th>Records</th>
                        <th>Updated</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<a asp-controller="HowTo" asp-action="Index" class="btn btn-link px-0">Read tutorial</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const tableElement = document.getElementById("buckets-table");
            if (!tableElement || !window.DataTable) {
                return;
            }

            const bucketUrlTemplate = '@Url.Action("Index", "Bucket", new { id = "__id__" })';

            const escapeHtml = (value) => {
                const div = document.createElement("div");
                div.textContent = value ?? "";
                return div.innerHTML;
            };

            new window.DataTable(tableElement, {
                ajax: {
                    url: '@Url.Action("Data", "Buckets")',
                    dataSrc: "data"
                },
                autoWidth: false,
                deferRender: true,
                pageLength: 10,
                lengthMenu: [10, 25, 50, 100],
                order: [[5, "desc"]],
                language: {
                    emptyTable: "No buckets yet. Create your first bucket above.",
                    search: "Search",
                    searchPlaceholder: "Name, slug, or description"
                },
                columns: [
                    {
                        data: "name",
                        render: (data, type) => {
                            const value = data ?? "";
                            if (type !== "display") {
                                return value;
                            }

                            return `<span class="fw-semibold">${escapeHtml(value)}</span>`;
                        }
                    },
                    {
                        data: "description",
                        defaultContent: "",
                        render: (data, type) => {
                            const value = data ?? "";
                            if (type !== "display") {
                                return value;
                            }

                            return value
                                ? escapeHtml(value)
                                : '<span class="text-muted">No description.</span>';
                        }
                    },
                    {
                        data: "slug",
                        render: (data, type) => {
                            const value = data ?? "";
                            if (type !== "display") {
                                return value;
                            }

                            return `<code>${escapeHtml(value)}</code>`;
                        }
                    },
                    {
                        data: "writeApiKey",
                        render: (data, type) => {
                            const value = data ?? "";
                            if (type !== "display") {
                                return value;
                            }

                            return `<code>${escapeHtml(value)}</code>`;
                        }
                    },
                    { data: "recordCount" },
                    {
                        data: "updatedUtc",
                        render: (data, type) => {
                            const value = data ?? "";
                            if (type !== "display") {
                                return value;
                            }

                            const parsed = new Date(value);
                            return Number.isNaN(parsed.getTime())
                                ? escapeHtml(value)
                                : escapeHtml(parsed.toLocaleString());
                        }
                    },
                    {
                        data: "id",
                        orderable: false,
                        searchable: false,
                        className: "text-end",
                        render: (data, type) => {
                            if (type !== "display") {
                                return data;
                            }

                            const href = bucketUrlTemplate.replace("__id__", encodeURIComponent(String(data)));
                            return `<a href="${href}" class="btn btn-primary btn-sm">Open</a>`;
                        }
                    }
                ]
            });
        })();
    </script>
}
