@model BitStoreWeb.Net9.Models.BucketsViewModel
@{
    ViewData["Title"] = "Buckets";
}

<div class="mb-3">
    <h1 class="section-title mb-1">Your Buckets</h1>
    <p class="section-subtitle mb-0">Create and manage API-ready storage buckets with dedicated write keys.</p>
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<div class="card mb-4 fade-in-up">
    <div class="card-body">
        <h2 class="h5 mb-3">Create bucket</h2>
        <form asp-action="Create" asp-controller="Buckets" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-5">
                <label asp-for="NewBucketName" class="form-label"></label>
                <input asp-for="NewBucketName" class="form-control" />
                <span asp-validation-for="NewBucketName" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="NewBucketDescription" class="form-label"></label>
                <input asp-for="NewBucketDescription" class="form-control" />
                <span asp-validation-for="NewBucketDescription" class="text-danger"></span>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-success align-self-end">Create</button>
            </div>
        </form>
    </div>
</div>

<p class="text-muted mb-3">Each bucket has a public slug and private write key.</p>

<div class="card mb-3 fade-in-up fade-delay-1">
    <div class="card-body">
        <div class="datatable-shell">
            <table
                id="buckets-table"
                class="table table-striped align-middle w-100 nowrap"
                data-source-url="@Url.Action("Data", "Buckets")"
                data-bucket-url-template="@Url.Action("Index", "Bucket", new { id = "__id__" })">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Slug</th>
                        <th>Write key</th>
                        <th>Records</th>
                        <th>Updated</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<a asp-controller="HowTo" asp-action="Index" class="btn btn-link px-0">Read tutorial</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
