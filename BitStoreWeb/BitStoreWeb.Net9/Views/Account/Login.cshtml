@model BitStoreWeb.Net9.Models.LoginViewModel
@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var showBootstrapHint = ViewData["ShowBootstrapHint"] as bool? == true;
    var authMode = ViewData["AuthMode"] as string ?? "login";
    var isRegisterMode = string.Equals(authMode, "register", StringComparison.OrdinalIgnoreCase);
    ViewData["Title"] = isRegisterMode ? "Create account" : "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm fade-in-up">
            <div class="card-body p-4">
                <span class="page-kicker mb-3">Account Access</span>
                <h1 class="h4 mb-2">@(isRegisterMode ? "Create account" : "Login")</h1>
                <p class="text-muted mb-2">
                    @(isRegisterMode
                        ? "Create a new account with your email and password."
                        : "Sign in to access buckets, API docs, and management pages.")
                </p>
                <p class="small text-muted mb-4">
                    @(isRegisterMode
                        ? "After account creation, you'll be signed in automatically."
                        : "No account yet? Use Create account.")
                </p>

                <div class="btn-group w-100 mb-4" role="group" aria-label="Account mode">
                    <a class="btn @(isRegisterMode ? "btn-outline-primary" : "btn-primary")"
                       asp-action="Login"
                       asp-controller="Account"
                       asp-route-returnUrl="@returnUrl"
                       asp-route-mode="login">Login</a>
                    <a class="btn @(isRegisterMode ? "btn-primary" : "btn-outline-primary")"
                       asp-action="Login"
                       asp-controller="Account"
                       asp-route-returnUrl="@returnUrl"
                       asp-route-mode="register">Create account</a>
                </div>

                <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl" asp-route-mode="@authMode" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">@(isRegisterMode ? "Create account" : "Sign in")</button>
                </form>

                @if (showBootstrapHint)
                {
                    <hr />
                    if (isRegisterMode)
                    {
                        <p class="small text-muted mb-0">
                            First account becomes <code>SuperUser</code>.
                        </p>
                    }
                    else
                    {
                        <p class="small text-muted mb-0">
                            No account exists yet. Click <strong>Create account</strong> first.
                        </p>
                    }
                }
            </div>
        </div>
    </div>
</div>
