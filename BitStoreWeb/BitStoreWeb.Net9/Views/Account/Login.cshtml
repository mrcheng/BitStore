@model BitStoreWeb.Net9.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var showBootstrapHint = ViewData["ShowBootstrapHint"] as bool? == true;
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm fade-in-up">
            <div class="card-body p-4">
                <span class="page-kicker mb-3">Account Access</span>
                <h1 class="h4 mb-3">Login</h1>
                <p class="text-muted mb-4">Sign in to access buckets, API docs, and management pages.</p>

                <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign in</button>
                </form>

                @if (showBootstrapHint)
                {
                    <hr />
                    <p class="small text-muted mb-0">
                        First login creates the first account as <code>SuperUser</code>.
                    </p>
                }
            </div>
        </div>
    </div>
</div>
