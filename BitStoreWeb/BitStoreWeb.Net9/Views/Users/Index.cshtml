@model BitStoreWeb.Net9.Models.UsersViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="mb-3">
    <h1 class="section-title mb-1">Users</h1>
    <p class="section-subtitle mb-0">SuperUser view of all registered accounts.</p>
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<div class="card mb-3 fade-in-up">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 mb-0">Registered Accounts</h2>
            <span class="badge text-bg-secondary">@Model.TotalUsers total</span>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th style="width: 10%;">Id</th>
                        <th style="width: 35%;">Username</th>
                        <th style="width: 20%;">Role</th>
                        <th style="width: 20%;">Created</th>
                        <th style="width: 10%;">Buckets</th>
                        <th style="width: 5%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-muted">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td><code>@user.Role</code></td>
                                <td>@user.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@user.BucketCount</td>
                                <td class="text-end">
                                    @if (!string.Equals(user.Role, Roles.SuperUser, StringComparison.OrdinalIgnoreCase))
                                    {
                                        <form asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete user" aria-label="Delete user" onclick="return confirm('Delete this user and all of their buckets?');">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5.5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6zm2-.5a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5z"></path>
                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1 0-2H5V1.5A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5V2h2.5a1 1 0 0 1 1 1zM6 2h4v-.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5V2zM4 4v9a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4H4z"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
